<div class="wishlist wl-{{@wishlist.uuid}}">
  <div class="wl-name">
    <h3>{{@wishlist.name}}</h3>
  </div>

  <div class="wl-attributes">
    <p>3 items</p>
    <div class="vertical-divider"></div>
    <p>due at {{@wishlist.due_date}}</p>
    <div class="vertical-divider"></div>
    <p>{{@wishlist.place}}</p>
    <div class="vertical-divider"></div>
    <span class="badge {{@wishlist.status}}">{{@wishlist.status}}</span>
  </div>
</div>